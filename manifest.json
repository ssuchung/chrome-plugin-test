{
    "manifest_version": 2,
    "name": "refresh on time",
    "version": "1.0",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "refresh"
        // "default_popup": "js/popup.js"
        // "default_popup": "html/popup.html"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },

    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}